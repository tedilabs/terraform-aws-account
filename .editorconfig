# Top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 150

[*.{tf,tfvars}]
indent_size = 2
indent_style = space

[*.md]
max_line_length = 0

[COMMIT_EDITMSG]
max_line_length = 0
